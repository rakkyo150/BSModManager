<Window x:Class="ModManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="700" Width="1200" MinHeight="400" MinWidth="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <Button Content="Main" Command="{Binding ShowMainTabViewCommand}" CommandParameter="MainTab" Margin="10" Height="70" Width="70" DockPanel.Dock="Top"/>
            <Button Content="Settings" Command="{Binding ShowSettingsTabViewCommand}" CommandParameter="SettingsTab" Margin="10 0 10 10" Width="70" Height="70" DockPanel.Dock="Top"/>
            <TextBlock Text="{Binding MyselfVersion}" FontSize="15" TextAlignment="Center" HorizontalAlignment="Center" Margin="5 5 5 10" DockPanel.Dock="Bottom"/>
            <TextBlock Text="{Binding GameVersion}" FontSize="15" TextAlignment="Center" HorizontalAlignment="Center" Margin="5" DockPanel.Dock="Bottom"/>
            <TextBlock Text=""/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <Button Content="Install/Update" Width="100" Margin="10"  Padding="10" DockPanel.Dock="right"/>
            <Button Content="Mod Info" Width="100" Margin="10"  Padding="10" DockPanel.Dock="right"/>
            <TextBlock Text="{Binding Console}" Background="LightGray" Margin="0 10 10 10" Padding="10" FontSize="20"/>
        </DockPanel>
        <ContentControl Margin="0 10 10 10" prism:RegionManager.RegionName="ContentRegion" />
    </DockPanel>
</Window>
